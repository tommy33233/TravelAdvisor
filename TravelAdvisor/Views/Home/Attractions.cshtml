@model List<TravelAdvisor.Models.AttractionsViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Attractions</title>
</head>
<body>
<div id="page" class="container">

    <div style="display: inline-block">

        @for (var i = 0; i < Model.Count; i++)
        {
           
            <div style="display: inline-block">

                <div class="column@i">
                    @Model[i].AttractionName
                    <br />
                    <img src="~/images/@Model[i].ImageName" width="282" height="150" alt="" />
                    <p>@Model[i].Description</p>
                </div>

            </div>

            if (i % 3 == 2)
            {
                <br />
            }
        }
    </div>

    @Html.ActionLink("Create New", "AddAttraction","Home",null, new { @class = "button" })
    
</div>
</body>
</html>
